<configuration>
    <!-- Console appender that prints requestId from MDC -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- %X{requestId:-} = show MDC 'requestId' or '-' if missing -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - rid=%X{requestId:-} %msg%n%ex</pattern>
        </encoder>
    </appender>

    <!-- Keep Spring noise reasonable; tweak as you like -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.apache.coyote" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>